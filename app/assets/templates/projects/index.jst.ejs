<div class="content container">
  <h2 class="std-font uppercase">Projects</h2>
  <div id="projects-list" class="std-font list-group">
    <% projects.each(function (project) { %>
      <a class="list-group-item" href="#/projects/<%= project.id %>">
        <%= project.escape('title') %>
        <p class="pull-right">Last Updated <%= moment(project.get('updated_at')).format('DD MMM [@]hh:mm') %></p>
      </a>
    <% }); %>
  </div>
  <button class="btn btn-primary btn-md uppercase std-font" data-toggle="modal" data-target="#new-project-modal">Create New Project</button>
</div>

<div class="modal fade" id="new-project-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title std-font uppercase" id="myModalLabel">New Project</h4>
      </div>
      <div class="modal-body">
        <%= JST['projects/form']() %>
      </div>
    </div>
  </div>
</div>